{
    "compilerOptions": {
        "target": "esnext",
        "types": ["jest", "node"],
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "emitDeclarationOnly": true
    },
    "include": [
        "src/**/*",
        "rollup.config.ts",
        "node_modules/@types/wicg-file-system-access/index.d.ts"
    ],
    "exclude": ["src/document/utils/browser.ts"]
}
