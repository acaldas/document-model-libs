{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "types": ["jest", "node"],
        "declaration": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}
